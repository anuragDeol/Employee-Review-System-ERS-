<div class="container-fluid bg-secondary text-light vh-100 pt-3">
  <h1 class="text-center" style="font-family: sans-serif">
    <b>Admin Page</b>
  </h1>
  <h5 class="text-center" style="font-family: sans-serif">
    You have <i>admin rights</i>. You can assign the <u>performance reviews</u> and give an employee, the <u>admin rights</u> here.
  </h5>
  <div class="container d-flex justify-content-between mt-4 bg-secondary text-dark">
    <div class="row col-md-6 card" style="border-radius: 20px">
      <h4 class="text-center mt-2" style="color: rgb(79,86,92)">Assign Performance Reviews</h4>
      <hr />
      <form method="POST" action="/admin/set-Reviewers" class="mt-2 card-body">
        <div>
          <h6>Reviewee</h6>
          <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" name="Reviewee">
            <option selected disabled>Select Reviewee</option>
            <% for(let i=0; i < employeeList.length; i++){ %>
              <option value="<%= employeeList[i].id  %>">
                <%= employeeList[i].name %>
              </option>
            <% } %>
          </select>
        </div>
        <div>
          <h6>Reviewer</h6>
          <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" name="Reviewer">
            <option selected disabled>Select Reviewer</option>
            <% for(let i = 0; i < employeeList.length; i++){ %>
              <option value="<%= employeeList[i].id %>">
                <%= employeeList[i].name %>
              </option>
            <% } %>
          </select>
        </div>
        <div class="d-grid gap-2 col-6 mx-auto form_button">
          <input class="btn text-light" style="background-color:rgb(99,108,115)" type="submit" value="Submit" />
        </div>
      </form>
    </div>
    <div class="row col-md-6 card" style="border-radius: 20px">
      <h4 class="text-center mt-2" style="color: rgb(79,86,92)">Give admin-rights, to an employee</h4>
      <hr />
      <form method="POST" action="/admin/newAdmin" class="mt-3">
        <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" name="newAdmin">
          <option selected disabled>Non-admin employee list</option>
          <% for(let i=0; i < employeeList.length; i++){ %>
            <% if(!employeeList[i].isAdmin) { %>
            <option value="<%= employeeList[i].id %>">
              <%= employeeList[i].name %>
            </option>
            <% } %>
          <%}%>
        </select>
        <div class="d-grid gap-2 col-6 mx-auto form_button">
          <input class="btn text-light" style="background-color:rgb(99,108,115)" type="submit" value="Submit" />
        </div>
      </form>
    </div>
  </div>
</div>
  